<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar android:id="@+id/action_bar_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:minHeight="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
        <ImageView
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:id="@+id/logoImage"
            android:src="@drawable/transparent_calculator"/>



<Switch
    android:id="@+id/unitSwitch"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:shadowColor="#ffffff"
    android:textOn="US"
    android:textOff="SI"
    android:showText="true"
    />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/toolbarClearButton"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:layout_gravity="right"
        android:textColor="@color/text_color"

        style="@style/Widget.AppCompat.Button.Borderless"

        android:text="Clear"  />

    <android.support.v7.widget.AppCompatButton
    android:id="@+id/tooldbarCalculateButton"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:textColor="@color/text_color"
        android:textSize="15dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="Calculate"
        android:layout_gravity="right"/>

</LinearLayout>
    </LinearLayout>

    </android.support.v7.widget.Toolbar>

