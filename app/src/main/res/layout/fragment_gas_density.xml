<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://scheomas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gasDensityFragment"
    android:orientation="vertical"

    tools:context=".GasDensityFragment">


    <!-- TODO: Update blank fragment layout -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

<TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Standard Air"

            android:layout_gravity="left" />
    <Switch
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:id="@+id/standardAirSwitch"
        android:gravity="right"
        />
</TableRow>




        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wet Bulb Temperature"
                android:id="@+id/WetBulbTemperatureGasDensityFragmentTextView"
                android:layout_gravity="left" />


            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:gravity="right"
                android:id="@+id/WetBulbTemperatureGasDensityFragmentSwitch"
                android:checked="false" />

        </TableRow>



        </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow>


            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
               >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/inputBackgroundColor"


                    android:layout_height="match_parent"
                    android:gravity="center">

        <TextView
                        android:textColor="@color/text_color"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:text="  Tdb: Temperature  "
                        android:textSize="@dimen/input_fragment_text_size"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/inputBackgroundColor"


                        android:layout_height="wrap_content"
                        android:gravity="center|bottom">
                        <EditText
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:id="@+id/temperatureGasDensityFragmentEditText"
                            android:textColor="@color/text_color"
                            android:maxLines = "1"
                            android:background="#FFFFFF"

                            android:textSize="@dimen/input_fragment_text_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textColor="@color/text_color"
                            android:text="°C"
                            android:id="@+id/UnitstemperatureGasDensityFragmentTextView"  android:textSize="@dimen/input_fragment_text_size"/>
                    </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
                >

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/inputBackgroundColor"
                android:layout_height="match_parent">


                <TextView

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:text="Elevation above SeaLevel"
                    android:textColor="@color/text_color"

                    android:textSize="@dimen/input_fragment_text_size"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:background="@color/inputBackgroundColor"

                    android:layout_height="wrap_content"
                    android:gravity="center|bottom">
                    <EditText
                        android:id="@+id/ElevationAboveSeaLevelFragmentEdiText"
android:inputType="numberDecimal"
                        android:maxLines = "1"
                        android:background="#FFFFFF"

                        android:layout_width="100sp"
                        android:textColor="@color/text_color"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/input_fragment_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="ft"
                        android:id="@+id/UnitsElevationAboveSeaLevelFragmentTextView"
                        android:textSize="@dimen/input_fragment_text_size"/>

                </LinearLayout>
            </LinearLayout>

            </android.support.v7.widget.CardView>




        </TableRow>


        <TableRow>
            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
                >
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/inputBackgroundColor"
                android:layout_height="match_parent">
                <TextView
                    android:text="Twb: Wet Bulb Temperature"
                    android:id="@+id/dimensionHeightOrDiameterGasFlowFragmentTextView"
                    android:gravity="center"

                    android:textColor="@color/text_color"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/input_fragment_text_size"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <EditText
                        android:layout_width="100sp"
                        android:inputType="numberDecimal"
                        android:id="@+id/wetBulbTemperatureGasDensityFragmentEditText"
                        android:textColor="@color/text_color"
                        android:maxLines = "1"
                        android:background="#FFFFFF"

                        android:layout_height="wrap_content"
                        android:textSize="@dimen/input_fragment_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textColor="@color/text_color"
                        android:text="°C"
                        android:id="@+id/UnitsWetBulbtemperatureGasDensityFragmentTextView"

                        android:textSize="@dimen/input_fragment_text_size"/>
                </LinearLayout>
            </LinearLayout>
</android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
                >
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/inputBackgroundColor"
                android:layout_height="match_parent">
                <TextView
                    android:background="@color/inputBackgroundColor"
                    android:textColor="@color/text_color"

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity=    "center"
                    android:text="Sealevel Pressure"
                    android:textSize="@dimen/input_fragment_text_size"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:background="@color/inputBackgroundColor"

                    android:layout_height="fill_parent"
                    android:gravity="center">
                    <EditText
                        android:layout_width="100sp"
                        android:maxLines = "1"
                        android:background="#FFFFFF"

                        android:textColor="@color/text_color"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        android:id="@+id/seaLevelPressureGasDensityFragmentEditText"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:text="kPa"
                        android:id="@+id/UnitsseaLevelPressureGasDensityFragmentTextView"

                        android:textSize="@dimen/input_fragment_text_size"/>
                </LinearLayout>
            </LinearLayout>
</android.support.v7.widget.CardView>
        </TableRow>
        <TableRow>
            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
                >
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/inputBackgroundColor"
                android:layout_height="match_parent">
                <TextView

                    android:layout_width="fill_parent"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ps: Static Pressure"
                    android:textSize="@dimen/input_fragment_text_size"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:background="@color/inputBackgroundColor"

                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <EditText
                        android:maxLines = "1"
                        android:background="#FFFFFF"

                        android:inputType="numberDecimal"
                        android:textColor="@color/text_color"
                        android:id="@+id/staticPressureFragmentEditText"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/input_fragment_text_size"/>
                </LinearLayout>

            </LinearLayout>
</android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                android:id="@+id/layoutDuctPressure"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
                >
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/inputBackgroundColor"
                android:layout_height="match_parent"
               >
                <TextView

                    android:textColor="@color/text_color"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Duct Pressure : Pd"
                    android:textSize="@dimen/input_fragment_text_size"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/inputBackgroundColor"

                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color"
                        android:id="@+id/ductPressureFragmentTextView"

                        android:textSize="@dimen/input_fragment_text_size"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color"
                        android:layout_height="wrap_content"

                        android:text="°KPa"
                        android:id="@+id/UnitsDuctPressureFragmentTextView"/>

                </LinearLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>


        <TableRow
            >
            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                android:id="@+id/layoutRelativeHumidity"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
                >
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center"
                android:background="@color/inputBackgroundColor"

                android:layout_height="match_parent">
                <TextView

                    android:textColor="@color/text_color"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="Relative Humidity"
                    android:textSize="@dimen/input_fragment_text_size"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:background="@color/inputBackgroundColor"

                    android:layout_height="fill_parent"
                    android:gravity="center">
                    <TextView
                        android:layout_width="100sp"
                        android:textColor="@color/text_color"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:id="@+id/relativeHumidityTextView"
                        android:textSize="@dimen/input_fragment_text_size"/>
                    <TextView
                        android:textColor="@color/text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:id="@+id/UnitsRelativeHumiditytemperatureGasDensityFragmentTextView"/>
                </LinearLayout>
            </LinearLayout>
</android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:background="@color/inputBackgroundColor"
                android:elevation="5dp"
                android:id="@+id/layoutAtmosphericPressure"

                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:layout_width="@dimen/input_fragment_width"
                android:layout_height="@dimen/input_fragment_height"
                android:layout_margin="10dp"
                >
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"

                android:background="@color/inputBackgroundColor"
                android:layout_height="match_parent">
                <TextView

                    android:textColor="@color/text_color"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Atmospheric Pressure (Pb):"

                    android:textSize="@dimen/input_fragment_text_size"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:orientation="horizontal"
                    android:background="@color/inputBackgroundColor"

                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      "
                        android:id="@+id/AtmosphericPressureFragmentTextView"
                        android:textColor="@color/text_color"

                        android:textSize="@dimen/input_fragment_text_size"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ft"
                        android:id="@+id/UnitsAtmosphericPressureFragmentTextViewUnits"
                        android:textColor="@color/text_color"

                        android:textSize="@dimen/input_fragment_text_size"/>
                </LinearLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>
        </TableRow>
















    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/inputBackgroundColor"
        android:id="@+id/layoutGasDensity"
        android:layout_margin="10dp"
        android:layout_height="@dimen/input_fragment_height">
        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gas Density"
            android:id="@+id/actualAirFlowTextView"
            android:textColor="@color/text_color"
            android:textSize="@dimen/input_fragment_text_size"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:background="@color/inputBackgroundColor"

            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:id="@+id/ResultCalculatedGasDensityTextView"
                android:textColor="@color/text_color"
                android:textSize="@dimen/input_fragment_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg/m³"
                android:textColor="@color/text_color"
                android:id="@+id/UnitsCalculatedGasDensityTextView"
                android:textSize="@dimen/input_fragment_text_size"/>


        </LinearLayout>

    </LinearLayout>
    </TableLayout>

</ScrollView>

</LinearLayout>